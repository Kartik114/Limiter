<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.limiter">

    <uses-permission android:name="android.permission.INTERNET" />


    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Limiter"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".adminFunction.EditFAQ"
            android:exported="false" />
        <activity
            android:name=".adminFunction.AddSlotActivity"
            android:exported="false" />
        <activity
            android:name=".adminFunction.AdminDisplayParking"
            android:exported="false" />
        <activity
            android:name=".adminFunction.AdminMainActivity"
            android:exported="false" />

        <activity
            android:name=".adminFunction.AdminLoginActivity"
            android:exported="false" />

        <activity
            android:name=".adminFunction.SetMaxTime"
            android:exported="false" />

        <activity
            android:name=".VehicleRegisActivity"
            android:exported="false" />
        <activity
            android:name=".ChangePassword"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/network_security_config" />

        <activity
            android:name=".sidebar"
            android:exported="false"
            android:label="@string/title_activity_sidebar"
            android:theme="@style/Theme.Limiter.NoActionBar" />
        <activity
            android:name=".Otp"
            android:exported="false" />
        <activity
            android:name=".SignUp"
            android:exported="false" />
        <activity
            android:name=".Login"
            android:exported="false" />
        <activity
            android:name=".Timer"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

    </application>

</manifest>