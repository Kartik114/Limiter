<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vehicleItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvVehicleModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yama"
        android:textSize="20sp"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvVehicleType"
        app:layout_constraintTop_toTopOf="parent"


        />
    <TextView
        android:id="@+id/tvVehicleNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UP78CV1245"
        android:textSize="20sp"
        android:padding="5dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvVehicleModel"

        />
    <TextView
        android:id="@+id/tvVehicleType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bike"
        android:textSize="20sp"
        android:padding="5dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvVehicleModel"
        app:layout_constraintRight_toRightOf="parent"

        />




</androidx.constraintlayout.widget.ConstraintLayout>